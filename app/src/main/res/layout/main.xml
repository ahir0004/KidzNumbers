<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    android:weightSum="4">

    <FrameLayout
     			android:layout_width="fill_parent"
        		android:layout_height="0dip"
        android:layout_weight="3"
        		>
     <ImageView
         android:id="@+id/imageViewSplash"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:contentDescription="splashScreen"
         android:src="@drawable/splash"
         android:visibility="visible"
         />
     <dk.org.macallan.kidznumbers.views.GameView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         />
     <FrameLayout android:id="@+id/container"
     			  android:layout_width="fill_parent"
         android:layout_height="fill_parent">
	     <!--org.ata.kidz.appz.views.SmileyView
	        android:id="@+id/imageView2"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	         android:visibility="gone"
	        /-->
	     <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
             android:contentDescription="bla"
	        android:src="@drawable/smiley"
	        android:visibility="gone"
	        />

	     <ImageView
	        android:id="@+id/imageView3"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
             android:contentDescription="bla"
	        android:src="@drawable/one"
	        android:visibility="gone"
	        />

        </FrameLayout>
    </FrameLayout>

    <TableLayout
        android:id="@+id/keypad_array"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_weight="0.9"
        android:gravity="bottom"
        android:orientation="vertical"
        android:stretchColumns="*"
        android:visibility="invisible">

        <TableRow>

            <Button
                android:id="@+id/keypad_1"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_button"
                android:text="1"
                android:textSize="35sp"></Button>

            <Button
                android:id="@+id/keypad_2"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_button"
                android:text="2"
                android:textSize="35sp"></Button>

            <Button
                android:id="@+id/keypad_3"
                android:background="@drawable/rounded_button"
                android:text="3"
                android:textSize="35sp"></Button>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/keypad_4"
                android:background="@drawable/rounded_button"
                android:text="4"
                android:textSize="35sp"></Button>

            <Button
                android:id="@+id/keypad_5"
                android:background="@drawable/rounded_button"
                android:text="5"
                android:textSize="35sp"></Button>

            <Button
                android:id="@+id/keypad_6"
                android:background="@drawable/rounded_button"
                android:text="6"
                android:textSize="35sp"></Button>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/keypad_7"
                android:background="@drawable/rounded_button"
                android:text="7"
                android:textSize="35sp"></Button>

            <Button
                android:id="@+id/keypad_8"
                android:background="@drawable/rounded_button"
                android:text="8"
                android:textSize="35sp"></Button>

            <Button
                android:id="@+id/keypad_9"
                android:background="@drawable/rounded_button"
                android:text="9"
                android:textSize="35sp"></Button>
        </TableRow>
    </TableLayout>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.1"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>
</LinearLayout>